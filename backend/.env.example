# Server
PORT=5000
NODE_ENV=development

# Database (include auth credentials for production)
MONGODB_URI=mongodb://localhost:27017/whatsapp-saas
# For Docker Compose with auth:
# MONGODB_URI=mongodb://waadmin:changeme_mongo_password@mongodb:27017/whatsapp-saas?authSource=admin

# Redis (include password for production)
REDIS_URL=redis://localhost:6379
# For Docker Compose with auth:
# REDIS_URL=redis://:changeme_redis_password@redis:6379

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# Encryption (32-byte hex key for AES-256) â€” generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Meta / WhatsApp
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_CONFIG_ID=your-embedded-signup-config-id
WHATSAPP_APP_SECRET=your-whatsapp-app-secret
WHATSAPP_VERIFY_TOKEN=your-custom-webhook-verify-token
WEBHOOK_CALLBACK_URL=https://yourdomain.com/api/v1/webhook

# Frontend URL
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated for multiple domains)
# CORS_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com

# Docker Compose credentials (used in docker-compose.yml)
# MONGO_ROOT_USER=waadmin
# MONGO_ROOT_PASSWORD=changeme_mongo_password
# REDIS_PASSWORD=changeme_redis_password

# Seed script admin credentials
# ADMIN_EMAIL=admin@yourdomain.com
# ADMIN_PASSWORD=YourStrongPasswordHere
# ADMIN_NAME=Platform Admin

# SMTP / Email (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@yourdomain.com


# Sandbox / Test Mode (set to "true" to mock WhatsApp API calls)
# SANDBOX_MODE=false
